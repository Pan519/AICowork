{
    "appId": "com.devagentforge.aicowork",
    "productName": "AICowork",
    "compression": "maximum",
    "files": [
        "package.json",
        "dist-electron/**/*",
        "dist-react/**/*",
        "templateIcon.ico",
        "node_modules/@anthropic-ai/claude-agent-sdk/sdk.mjs",
        "node_modules/@anthropic-ai/claude-agent-sdk/cli.js",
        "node_modules/@anthropic-ai/claude-agent-sdk/package.json",
        "node_modules/@anthropic-ai/claude-agent-sdk/resvg.wasm",
        "node_modules/@anthropic-ai/claude-agent-sdk/tree-sitter.wasm",
        "node_modules/@anthropic-ai/claude-agent-sdk/tree-sitter-bash.wasm",
        "node_modules/@anthropic-ai/claude-agent-sdk/vendor/**/*",
        "node_modules/@anthropic-ai/tokenizer/**/*",
        "node_modules/@memvid/sdk/**/*",
        "node_modules/better-sqlite3/**/*",
        "node_modules/zod/**/*",
        "node_modules/winston/**/*",
        "node_modules/**/*",
        "vendor/**/*",
        "!**/*.map",
        "!**/*.d.ts",
        "!**/*.md",
        "!**/test/**",
        "!**/tests/**",
        "!**/__tests__/**"
    ],
    "extraResources": [],
    "npmRebuild": true,
    "asarUnpack": [
        "node_modules/better-sqlite3/build/**/*.node",
        "node_modules/@memvid/sdk/**/*.node",
        "node_modules/@anthropic-ai/claude-agent-sdk/**/*",
        "vendor/**/*",
        "vendor/**"
    ],
    "icon": "./templateIcon.ico",
    "mac": {
        "target": [
            {
                "target": "dmg",
                "arch": ["arm64", "x64"]
            },
            {
                "target": "zip",
                "arch": ["arm64", "x64"]
            }
        ],
        "category": "public.app-category.productivity"
    },
    "linux": {
        "target": [
            {
                "target": "AppImage",
                "arch": ["x64"]
            },
            {
                "target": "deb",
                "arch": ["x64"]
            },
            {
                "target": "rpm",
                "arch": ["x64"]
            }
        ],
        "category": "Utility",
        "desktop": {
            "Name": "AICowork",
            "Comment": "AI Cowork - 智能协作助手",
            "Keywords": "AI;协作;助手;"
        }
    },
    "win": {
        "signAndEditExecutable": false,
        "target": [
            {
                "target": "nsis",
                "arch": ["x64"]
            },
            {
                "target": "zip",
                "arch": ["x64"]
            }
        ]
    }
}
