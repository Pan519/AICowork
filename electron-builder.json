{
    "appId": "com.devagentforge.aicowork",
    "productName": "AICowork",
    "files": [
        "dist-electron/**/*",
        "dist-react/**/*",
        "templateIcon.ico",
        "node_modules/**/*"
    ],
    "extraResources": [
        "dist-electron/preload.cjs",
        {
            "from": "templateIcon.ico",
            "to": "templateIcon.ico"
        }
    ],
    "npmRebuild": false,
    "asarUnpack": [
        "node_modules/@anthropic-ai/claude-agent-sdk/**/*",
        "node_modules/@anthropic-ai/tokenizer/**/*",
        "node_modules/better-sqlite3/**/*",
        "node_modules/os-utils/**/*",
        "node_modules/winston/**/*",
        "node_modules/winston-transport/**/*",
        "node_modules/async/**/*",
        "node_modules/@colors/colors/**/*",
        "node_modules/@dabh/diagnostic-tools/**/*",
        "node_modules/@dabh/unsafe-random/**/*",
        "node_modules/stack-trace/**/*",
        "node_modules/util-deprecate/**/*",
        "node_modules/@memvid/sdk/**/*"
    ],
    "icon": "./templateIcon.ico",
    "mac": {
        "target": "dmg"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "win": {
        "icon": "./templateIcon.ico",
        "signAndEditExecutable": false,
        "target": [
            "portable"
        ]
    }
}
